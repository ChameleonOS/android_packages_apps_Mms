<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorHighlight">@color/text_color_highlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:shadowColor">@color/text_color_primary_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textSize">@dimen/text_font_size_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SearchResult">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
    </style>

    <style name="TextAppearance.SearchResult.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SearchResult.Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>


    <!-- Message specific styles -->
    <style name="TextAppearance.MessageBody">
        <item name="android:textSize">@dimen/message_body_font_size</item>
        <item name="android:textColorLink">@color/message_body_link_text</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.MessageBody.Bubble">
        <item name="android:textColor">@color/message_bubble_body_text</item>
        <item name="android:shadowColor">@color/message_bubble_body_text_shadow_color</item>
    </style>

    <style name="TextAppearance.MessageBody.List">
        <item name="android:textColor">@color/message_list_body_text</item>
        <item name="android:shadowColor">@color/message_list_body_text_shadow_color</item>
    </style>

    <style name="TextAppearance.MessageBody.Mms">
        <item name="android:textColor">@color/message_body_mms_text_color</item>
        <item name="android:shadowColor">@color/message_body_mms_text_shadow_color</item>
    </style>


    <!-- Style for EditText when composing a message -->
    <style name="TextAppearance.MmsEditor" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:textSize">@dimen/text_font_size_large</item>
        <item name="android:textColor">@color/compose_message_edit_text</item>
    </style>


    <!-- Conversation list specific styles -->
    <style name="TextAppearance.ConversationListItem" parent="@style/TextAppearance">
        <item name="android:shadowColor">@color/conversation_list_item_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.ConversationListItem.Primary" parent="@style/TextAppearance.ConversationListItem">
        <item name="android:textSize">@dimen/conversation_list_item_primary_font_size</item>
        <item name="android:textColor">@color/conversation_primary_text</item>
    </style>

    <style name="TextAppearance.ConversationListItem.Primary.Unread" parent="@style/TextAppearance.ConversationListItem.Primary">
        <item name="android:textSize">@dimen/conversation_list_item_primary_font_size</item>
        <item name="android:textColor">@color/conversation_unread_text</item>
    </style>

    <style name="TextAppearance.ConversationListItem.Secondary" parent="@style/TextAppearance.ConversationListItem">
        <item name="android:textSize">@dimen/conversation_list_item_secondary_font_size</item>
        <item name="android:textColor">@color/conversation_secondary_text</item>
    </style>

    <style name="TextAppearance.ConversationTitle" parent="@style/TextAppearance">
        <item name="android:shadowColor">@color/conversation_title_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>


    <!-- ActionBar style -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/title_bar_bg</item>
        <item name="android:backgroundSplit">@drawable/message_edit_bottom_panel</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/SubtitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="SubtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>


    <!-- Mmms theme -->
    <style name="MmsHoloTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="WidgetTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NotificationPrimaryText">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="NotificationSecondaryText">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="NotificationSubjectText">
        <item name="android:textColor">#999999</item>
    </style>

</resources>
